# Настройки Mattermost
MATTERMOST_URL=https://your-mattermost-server.com
MATTERMOST_TOKEN=your_bot_token_here
MATTERMOST_USERNAME=your_bot_username
MATTERMOST_PASSWORD=your_bot_password
MATTERMOST_TEAM=your_team_name
MATTERMOST_SSL_VERIFY=true  # false - отключить проверку SSL (не рекомендуется)

# Настройки Confluence
CONFLUENCE_USERNAME=your_confluence_username
CONFLUENCE_PASSWORD=your_confluence_password

# Настройки LLM
LLM_PROXY_TOKEN=token
LLM_BASE_URL=url
LLM_MODEL=model_name

# Дополнительные настройки (опционально)
DEBUG=false
LOG_LEVEL=INFO 